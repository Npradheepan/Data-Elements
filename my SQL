    </Directory>
</VirtualHost>

<VirtualHost *:8888>
    ServerName page.test
    ServerAlias page.test
    ServerAdmin pn@kps-kommunikation.de
    ErrorLog "/Applications/MAMP/logs/page.test-error_log"
    CustomLog "/Applications/MAMP/logs/page.test-access_log" common
    DocumentRoot "/Applications/MAMP/htdocs/page"
    <Directory "/Applications/MAMP/htdocs/page">
        Options Indexes FollowSymLinks Includes execCGI
        AllowOverride All
        Order Allow,Deny
        Allow From All
    </Directory>
</VirtualHost>

